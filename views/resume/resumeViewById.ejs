<%- include("../includes/header.ejs", {title:"Resumes - " + result[0].resume_name}); %>
    <h1>Resume</h1>
    <ul>
        <li>Resume Name: <%= result[0].resume_name %></li>
        <li>Skill(s):
            <ul>
                <% for(var i=0; result.length > i; i++ ) { %>
                <li><%= result[i].skill_name + ': ' + result[i].description %></li>
                <% } %>
            </ul>
        </li>

        <li>Company/Companies:
            <ul>
                <% for(var i=0; result.length > i; i++ ) { %>
                <li><%= result[i].company_name %></li>
                <% } %>
            </ul>
        </li>

        <li>School(s):
            <ul>
                <% for(var i=0; result.length > i; i++ ) { %>
                <li><%= result[i].school_name %></li>
                <% } %>
            </ul>
        </li>
    </ul>

